	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Login Form</title>
	<link rel="stylesheet" href="/static/registration/demo.css">
	<link rel="stylesheet" href="/static/registration/form-login.css">
</head>




<div class="main-content" style="margin-top: 55px">
        <!-- You only need this form and the form-login.css -->
        <form class="form-login" method="post" action="/login">
        <!-- <input type="hidden" name="_csrf" value=<%#=// _csrf %> > -->
            <div class="form-log-in-with-email">
                <div class="form-white-background">
                    <div class="form-title-row">
                        <h1>Log in</h1>
                    </div>
                    <% if(locals.messages!==undefined){ %>
                            <span class="failed-register"> <%= messages %></span>
                    <% } %>
                    <div class="form-row">
                        <label>
                            <span>Email</span>
                            <input type="email" name="email">
                        </label>
                    </div>
                    <div class="form-row">
                        <label>
                            <span>Password</span>
                            <input type="password" name="password">
                        </label>
                    </div>
                    <div class="form-row">
                        <button type="submit">Log in</button>
                    </div>
                </div>
                <a href="/forget-password" class="form-forgotten-password">Forgotten password &middot;</a>
                <a href="/registration" class="form-create-an-account">Create an account &rarr;</a>
            </div>
            <div class="form-sign-in-with-social">
                <div class="form-row form-title-row">
                    <span class="form-title">Sign in with</span>
                </div>
                <a href="#" class="form-google-button">Google</a>
                <a href="#" class="form-facebook-button">Facebook</a>
                <a href="#" class="form-twitter-button">Twitter</a>
            </div>
        </form>
    </div>
</body>

</html>
<style>
    .failed-register {
        background: #e04e4e;
        font-size: 12px;
        color: aliceblue;
        font-weight: normal;
        display: inline-block;
        text-align: left;
        width: 100%;
        margin: 0;
        padding: 10px;
        margin-bottom: 15px;
    }
    .success-register {
        background: #37b916;
        font-size: 12px;
        color: white;
        font-weight: normal;
        display: inline-block;
        text-align: left;
        width: 100%;
        margin: 0;
        padding: 10px;
        margin-bottom: 15px;
    }
</style>