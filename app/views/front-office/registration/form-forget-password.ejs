	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<title>Forget Password</title>

	<link rel="stylesheet" href="/static/registration/demo.css">
	<link rel="stylesheet" href="/static/registration/form-login.css">

</head>




<div class="main-content" style="margin-top: 55px">
        <!-- You only need this form and the form-login.css -->
        <form class="form-login" method="post" action="/forget-password">
        <!-- <input type="hidden" name="_csrf" value=<%#=// _csrf %> > -->
            <div class="form-log-in-with-email">
                <div class="form-white-background">
                    <div class="form-title-row">
                        <h1>Forget Password</h1>
                    </div>
                    <% if(locals.message!==undefined && success===false){ %>
                        <span class="failed-register"> <%= message %></span>
                    <% } else if(locals.message!==undefined && success===true){ %>
                        <span class="success-register"> <%= message %></span>
                    <% } %>
                    <div class="form-row">
                        <label>
                            <span>Email</span>
                            <input type="email" name="email">
                        </label>
                    </div>                    
                    <div class="form-row">
                        <button type="submit">Reset</button>
                    </div>
                </div>
            </div>        
        </form>
    </div>
</body>

</html>
<style>
    .failed-register {
        background: #e04e4e;
        font-size: 12px;
        color: aliceblue;
        font-weight: normal;
        display: inline-block;
        text-align: left;
        width: 100%;
        margin: 0;
        padding: 10px;
        margin-bottom: 15px;
    }
    .success-register {
        background: #37b916;
        font-size: 12px;
        color: white;
        font-weight: normal;
        display: inline-block;
        text-align: left;
        width: 100%;
        margin: 0;
        padding: 10px;
        margin-bottom: 15px;
    }
    .form-log-in-with-email:after {
        display: none;
        content: 'OR';
        position: absolute;
        bottom: 260px;
        right: -100px;
        border-radius: 50%;
        background-color: #edeca5;
        width: 50px;
        height: 50px;
        color: #93923b;
        font-size: 17px;
        line-height: 50px;
}
</style>